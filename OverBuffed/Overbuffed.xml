<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ C:\Projects\WoW\Bin\Interface\FrameXML\UI.xsd">
	<Script file="OverBuffed.lua"/>
	<Frame name="OverBuffedFrame" movable="true" toplevel="true" parent="UIParent" hidden="true">
		<Size>
			<AbsDimension x="26" y="26" />
		</Size>
		<Anchors>
			<Anchor point="CENTER"/>
		</Anchors>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture name="$parentAnchor" setAllPoints="true">
					<Color r="0.5" g="0.5" b="0.5" a="0.5" />
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<FontString name="$parentText" inherits="GameFontNormal" justifyH="CENTER">
				<Size x="26" y="26"/>
					<Anchors>
						<Anchor point="CENTER">
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnLoad>
				OverBuffed_OnLoad();
				this:RegisterForDrag("LeftButton");
				this:EnableMouse(1);
			</OnLoad>
			<OnEvent>
				OverBuffed_OnEvent(event);
			</OnEvent>
			<OnDragStart>
				if(OverBuffedStatus_Locked == 0) then
					this:StartMoving();
				end
			</OnDragStart>
			<OnDragStop>
				this:StopMovingOrSizing();
			</OnDragStop>
		</Scripts>
	</Frame>
</Ui>